    await page.selectOption("#searchDropdownBox", "search-alias=fashion")
    await page.selectOption("#searchDropdownBox", { label: "Furniture" })
    await page.selectOption("#searchDropdownBox", { index: 10 })
    await page.waitForTimeout(3000)

